<h1>Города</h1>

<table>
  <thead>
    <tr>
      <th>Город</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city %></td>
        <td><%= link_to 'Показать', city %></td>
        <td><%= link_to 'Редактировать', edit_city_path(city) %></td>
        <td><%= link_to 'Удалить', city, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый город', new_city_path %>
