<%= form_for(@worksheet) do |f| %>
  <% if @worksheet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@worksheet.errors.count, "error") %> prohibited this worksheet from being saved:</h2>

      <ul>
      <% @worksheet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :sex %><br>
    <%= f.check_box :sex %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :language_id %><br>
    <%= f.text_field :language_name, data: {autocompete_source: search_languages_path} %>
  </div>
  <div class="field">
    <%= f.label :specialty_id %><br>
    <%= f.text_field :specialty_name, data: {autocompete_source: search_specialties_path} %>
  </div>
  <div class="field">
    <%= f.label :dateinput %><br>
    <%= f.date_select :dateinput %>
  </div>
  <div class="field">
    <%= f.label :city_id %><br>
    <%= f.text_field :city_name, data: {autocompete_source: search_cities_path} %>
  </div>
  <div cladd="stimulreaction">
    <% x=0%>
  <%= f.fields_for :stimulreaction do |builder| %>
  <% x += 1 %>
  <fieldset>
    <%= x %>
    <%= render 'stimulreaction_fields', f: builder %> 
  </fieldset>   
  <% end %>
  <%= link_to_add_fields "Добавить", f, :stimulreaction %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
